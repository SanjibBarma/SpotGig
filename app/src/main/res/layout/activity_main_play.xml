<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.spotbig.MainPlay">

    <TextView
        android:id="@+id/welcomView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Say Hello"
        android:textColor="@android:color/background_dark"
        android:textSize="24dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnOne"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/welcomView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:onClick="buttonOne"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnTwo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btnOne"
        android:layout_toStartOf="@+id/btnOne"
        android:onClick="buttonTwo"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnThree"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btnOne"
        android:layout_toEndOf="@+id/btnOne"
        android:onClick="buttonThree"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnFour"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/btnOne"
        android:layout_below="@+id/btnTwo"
        android:onClick="buttonFour"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/pointView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnFour"
        android:layout_below="@+id/btnFour"
        android:layout_marginTop="36dp"
        android:text="TextView"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="25dp"
        android:textStyle="bold" />

</RelativeLayout>
